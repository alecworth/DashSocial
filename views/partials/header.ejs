  </head>
  <body>
    <header class="headerBoy shadow-sm text-white py-3">
      <div class="container">
        <div class="row align-items-center">
          <% if (!isIndexPage) { %>
            <div class="col text-start">
              <a class="btn btn-primary btn-sm" href="/profile">Profile</a>
            </div>
          <% } %>
          <div class="col text-center">
            <h1 class="m-0"><a href="/feed" class="text-decoration-none text-white">Dash Social</a></h1>
          </div>
          <% if (!isIndexPage) { %>
            <div class="col text-end">
              <a href="/logout" class="btn btn-primary btn-sm">Logout</a>
            </div>
          <% } %>
        </div>
        <div class="row">
          <div class="col text-center">
            <span>Stay in the loop!</span>
          </div>
        </div>
      </div>
    </header>
  </body>
