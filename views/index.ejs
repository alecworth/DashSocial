<%- include('partials/header') -%>

<main class="container d-flex justify-content-center mt-5 min-vh-100" >
    <div class="loginCard p-5 rounded shadow-sm" style="width: 50%;">
      <% if (locals.messages.errors) { %>
        <% messages.errors.forEach(el => { %>
          <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %>
      <% } %>
      <% if (locals.messages.info) { %>
        <% messages.info.forEach(el => { %>
          <div class="alert alert-info"><%= el.msg %></div>
        <% }) %>
      <% } %>
      
      <form action="/login" method="POST" class="form-signin text-center">
        <h1 class="h3 mb-3 text-white font-weight-normal">Login</h1>
  
        <div class="form-group">
          <input
            type="email"
            class="form-control mx-auto mb-3"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
            name="email"
            required
            autofocus
            style="width: 50%;"
            placeholder="Email address"
          />
        </div>
  
        <div class="form-group">
          <input
            type="password"
            class="form-control mx-auto mb-3"
            id="exampleInputPassword1"
            name="password"
            required
            style="width: 50%;"
            placeholder="Password"
          />
        </div>
  
        <button type="submit" class="btn btn-primary col-12 col-md-6 mx-auto mb-3">Submit</button>
        <a href="/signup" class="btn btn-primary">Don't have an account? Sign up today!</a>
      </form>
    </div>
  </main>


    

<%- include('partials/footer') -%>